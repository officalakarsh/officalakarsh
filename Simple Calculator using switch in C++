#include <iostream>

int main() {
    
    char op;
    double num1;
    double num2;
    double result;
    
    std::cout<<"**********CALCULATOR**********\n";
    
    std::cout<<"Enter any operators from (+, -, *, /,):-->";
    std::cin>> op;
    
    std::cout<<"Enter num1:";
    std::cin>> num1;
    
    std::cout<<"Enter num2:";
    std::cin>> num2;
    
    switch(op){
        case '+':
        result = num1 + num2;
        std::cout<<"result"<<result;
        break;
        case '-':
        result = num1 - num2;
        std::cout<<"result"<<result;
        break;
        case '*':
        result = num1 * num2;
        std::cout<<"result"<<result;
        break;
        case '/':
        result = num1 / num2;
        std::cout<<"result "<<result;
        break;
        default:
        std::cout<<"Enter valid operators";
        
    }
    
    std::cout<<"\n******************************";
    
    return 0;
}
