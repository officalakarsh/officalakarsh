#include <iostream>
int main() {
    std::string name;
    int age;
    int height;

    std::cout <<"What's your name?";
    std::cin >> name;

    std::cout <<"What's your age?";
    std::cin >> age;
    
    std::cout <<"What's your height?";
    std::cin >> height;

    std::cout << "Hello " << name;
    std::cout <<" you are " << age << " years old";
    std::cout <<" you are " << height << "cms.";

    return 0;
}
